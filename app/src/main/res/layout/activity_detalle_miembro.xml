<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleMiembroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_detalle_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:text="Nombre del Miembro" />

            <TextView
                android:id="@+id/tv_detalle_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Estado: Verde | Última Visita: 20-09-2025"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto y Ubicación"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_detalle_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono: 555-1234"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detalle_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección: Calle Falsa 123"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial de Visitas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_historial_visitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_visita_nota"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registrar_visita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Visita"
            android:backgroundTint="#0288D1"
            android:layout_marginEnd="8dp"
            app:icon="@android:drawable/ic_menu_edit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_editar_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Datos"
            android:backgroundTint="#0288D1"
            android:layout_marginStart="8dp"
            app:icon="@android:drawable/ic_menu_info_details" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>