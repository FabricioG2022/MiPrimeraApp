<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarVisitaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Visita para:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_miembro_nombre_visita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            tools:text="Juan Pérez" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de la Visita:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_fecha_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"
            tools:text="25-10-2025" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar Estado Espiritual:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rg_estado_espiritual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb_estado_verde"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verde"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_estado_amarillo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amarillo" />

            <RadioButton
                android:id="@+id/rb_estado_rojo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rojo" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota de la Visita / Comentarios:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_nota_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:hint="Ej: Se habló de la familia. Se solicitó oración por un trabajo, etc."
            android:background="@android:drawable/editbox_background"
            android:padding="8dp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btn_guardar_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0288D1"
            android:text="GUARDAR REGISTRO DE VISITA"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>